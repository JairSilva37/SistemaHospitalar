@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirmação de email";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class=" card-title">
        <h3 class="card-header">Confirmação de Email</h3>
    </div>
    <div class=" card-body">
        <h4 >Email Confirmado</h4>
        <hr />
        <p>Obrigado por confirmar seu email</p>
        <p>A partir de agora voce podera usar todo o sistema e beneficios </p>
    </div>
    <div class=" card-footer">
        <a class="btn btn-info" asp-controller="Home" asp-action="Home">Voltar para  a pagina principal</a>
    </div>
</div>


