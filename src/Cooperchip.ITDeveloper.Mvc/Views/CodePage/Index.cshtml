
@model IEnumerable<Cooperchip.ITDeveloper.Mvc.Controllers.CodigoPagina>

@{
    ViewData["Title"] = "Medical Management Sys - Lista de Code Page";
}

<div class="row" style="margin-top: 12px;">

    <div class="col-lg-12">
        <p>
            @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-default" })
        </p>
        <div class="animated fadeInRightBig">
            <div class="panel panel-primary toggle">
                <div class="panel-heading">
                    <h4 class="panel-title"><i class="fa fa-magic"></i> @ViewData["Title"]</h4>
                </div>
                <div class="panel-body">

                    <div class="jumbotron">
                        <h4 class="alert alert-success">Estas são as páginas de código com suporte nativo do .NET Core</h4>
                    </div>

                    <table id="myTableCid" class="table table-striped table-bordered" style="width:100%" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Name</th>
                                <th>DisplayName</th>
                                <th>WebName</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @item.Code
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.DisplayName
                                </td>
                                <td>
                                    @item.WebName
                                </td>

                            </tr>
                            }
                        </tbody>


                    </table>
                </div>
            </div>
        </div>
    </div>
</div>





@section Scripts {

    <script src="~/bundle/dashboard.min.js"></script>

}